                        </Grid>
                     </ControlTemplate>
                     <ControlTemplate x:Key="ExpanderLeftHeaderTemplate" TargetType="ToggleButton">
                        <Grid Background="Transparent">
                           <VisualStateManager.VisualStateGroups>
