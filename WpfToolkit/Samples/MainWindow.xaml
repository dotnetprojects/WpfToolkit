                <samples:CustomEvents />
            </TabItem>
            <TabItem Header="SearchSuggestionSample">
                <samples:SearchSuggestionSample />
            </TabItem>
            <TabItem Header="AccordionSample">
                <samples:AccordionSample />
            </TabItem>
            <TabItem Header="AccordionShowcase">
                <samples:AccordionShowcase />
            </TabItem>
            <TabItem Header="AccordionUsage">
                <samples:AccordionUsage />
            </TabItem>
            <TabItem Header="RatingSample">
                <samples:RatingSample />
            </TabItem>
            <TabItem Header="Issue#16">
                <Grid>
                    <primitives:ExpandableContentControl Percentage="1" RevealMode="Right">
