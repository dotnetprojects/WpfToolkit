                <samples:AutoCompleteBoxSample />
            </TabItem>
            <TabItem Header="AutoCompleteComboBox">
                <samples:AutoCompleteComboBox />
            </TabItem>
            <TabItem Header="AutoCompleteLambda">
                <samples:AutoCompleteLambda />
            </TabItem>
